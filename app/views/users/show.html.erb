<div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div>
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span><%= job_title_icon %></span><%= @user.profile.job_title %></h3>
      <div class="well profile-block pro-desc">
        <h3>About Me</h3>
        <%= @user.profile.description %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <% if user_signed_in? && (current_user.id == @user.id) %>
        <%= link_to "Edit profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <% if current_user.plan_id == 2 %>
        <div class="well profile-block pro-contact">
            <h3>Contact Information</h3>
            <%= @user.profile.phone_number %>
            <%= @user.profile.contact_email %>
          </div>
      <% else %>
        <div class="well profile-block pro-contact">
            <h3>Contact Information</h3>
            <br>
            <p class="text-center">Sign up for DevLink Pro to view users' contact information</p>
            <br>
          </div>
      <% end %>
    </div>
  </div>
</div>